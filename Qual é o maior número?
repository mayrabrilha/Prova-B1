#include <stdio.h>


int main()
{ 
    float numero1, numero2, numero3;


    printf("Escreva 3 números e descubra qual o maior \nEscreva o primeiro número:");
    scanf("%f", &numero1);
    
    printf("O segundo número:");
    scanf("%f", &numero2);
    
    printf("O terceiro número:");
    scanf("%f", &numero3);
    
    
    
    if( numero1 > numero2 && numero1 > numero3){
        
        printf("O primeiro numero informado é o maior \n O número é %.2f",numero1);
        
    }else if( numero2 > numero1 && numero2 > numero3){
        
        printf("O segundo numero informado é o maior \n O número é %.2f",numero2);
        
    }else if( numero3 > numero1 && numero3 > numero2){
        
        printf("O terceiro numero informado é o maior \n O número é %.2f",numero3);
    }else{
        printf("Os números são iguais");
    }
    
    
}



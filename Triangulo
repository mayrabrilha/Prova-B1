#include <stdio.h>


int main()
{ 
    float lado1, lado2, lado3;


    printf("Escreva o valor do lado 1 (Hipotenusa):");
    scanf("%f", &lado1);
    
    printf("Escreva o valor do lado 2 (Cateto Oposto):");
    scanf("%f", &lado2);
    
    printf("Escreva o valor do lado 3 (Cateto Adjacente):");
    scanf("%f", &lado3);
    
    
     if( lado1 == lado2 && lado2 == lado3){
        
        printf("O triangulo é equilatero pois todos os seus lados são iguais"  );
     
         
     }else if ( lado1 == lado2 || lado1 == lado3 ){
         printf("O triângulo é isósceles pois tem dois lados iguais");
         
     }else if ( lado2 == lado3 ){
         printf("O triângulo é isósceles pois tem dois lados iguais");
    
     }else{
         
         printf("O triângulo é escaleno pois todos os seus lados são diferentes");
         
     }
    
    
    
    
    
}

